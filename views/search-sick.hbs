<div class="container" style="margin-top: 20px;">
    <h3 class="text-center mt-2"><b>Danh sách bệnh lý</b></h3>


     <div class="container">
	<table  id="example">
	  <thead>
            <tr>
                <th>Tên bệnh</th>
                <th>Triệu chứng</th>
                <th>Phương án xử lý</th>
                {{#ifEquals role "doctor"}}
                <th>Hành động</th>
                {{/ifEquals}}
            </tr>
        </thead>
        {{#ifEquals role "doctor"}}
       <button class="btn  py-3" type="submit" data-bs-toggle="modal" data-bs-target="#add" style="margin-top: 20px;background-color:#1eb2c5;color:#fff;width:200px;border-radius:10px;margin-bottom: 20px">       
                   Thêm bệnh lý
       </button>
     {{/ifEquals}}
        <tbody>
            {{#each sicks}}
            <tr>
                <td>{{SickName}}</td>
                <td>{{Symptom}}</td>
                <td>{{Desc}}</td>
                {{#ifEquals ../role "doctor"}}
                <td>
                    <div class="d-flex">
                        <a type="button" class="d-block me-2" data-bs-toggle="modal" data-bs-target="#editServiceModal{{ID}}">
                            <i class="bi bi-pencil-square"></i>
                        </button>
                        <a type="button" class="d-block" data-bs-toggle="modal" data-bs-target="#deleteServiceModal{{ID}}">
                            <i class="bi bi-trash3"></i>
                        </a>
                    </div>
                </td>
                {{/ifEquals}}
            </tr>
            {{/each}}
        
	</table>
</div>
</div>

{{#each sicks}}
<!-- Modal -->
<div class="modal fade" id="editServiceModal{{ID}}" tabindex="-1" aria-labelledby="editServiceModal{{ID}}"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Chỉnh sửa thông tin bệnh lý</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form class="px-md-2" id="editServiceForm{{ID}}" action="/chinh-sua/benh-ly/{{ID}}" method="POST">
                    {{!-- Drug name input --}}
                    <div class="form-floating mb-4">
                        <input type="text" id="SickName{{ID}}" class="form-control" name="SickName"
                            value="{{SickName}}" required />
                        <label class="form-label" for="SickName{{ID}}">Tên bệnh lý</label>
                    </div>
                    <div class="form-floating mb-4">
                        <input type="text" id="Symptom{{ID}}" class="form-control" name="Symptom"
                            value="{{Symptom}}" required />
                        <label class="form-label" for="Symptom{{ID}}">Triệu chứng</label>
                    </div>
                   <div class="form-floating mb-4">
                        <input type="text" id="Desc{{ID}}" class="form-control" name="Desc"
                            value="{{Desc}}" required />
                        <label class="form-label" for="Desc{{ID}}">Phương án xử lý</label>
                    </div>
                    {{!-- Unit input --}}
                    
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="submit" class="btn btn-primary" form="editServiceForm{{ID}}">Xác nhận</button>
            </div>
        </div>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="deleteServiceModal{{ID}}" tabindex="-1" aria-labelledby="deleteServiceModal{{ID}}"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xóa bệnh lý</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Bạn có chắc chắn muốn xóa dịch vụ <i>{{SickName}}</i>?
                <form class="px-md-2" id="deleteServiceForm{{ID}}" action="/chinh-sua/benh-ly/xoa/{{ID}}" method="POST">
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="submit" class="btn btn-primary" form="deleteServiceForm{{ID}}">Xác nhận</button>
            </div>
        </div>
    </div>
</div>
{{/each}}

<div class="modal fade" id="add" tabindex="-1" aria-labelledby="add"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Thêm bệnh lý</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form class="px-md-2" id="editServiceForm" action="/tai-lieu/them-benh-ly" method="POST">
                    {{!-- Drug name input --}}
                     <div class="form-floating mb-4">
    <input type="text" id="ID" class="form-control" name="ID" value="" />

